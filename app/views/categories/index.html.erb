<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= t('categories.index.title') %></h1>
  </div>

  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-12">
        <div class="card mb-3 border-0 shadow-lg bg-light">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to category.name, category_path(category), class: "text-decoration-none text-primary" %>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>