<h1>Kategorie</h1>
<p>
  <%= link_to "Pridat Kategoriu", new_category_path %>
</p>

<% @categories.each do |category| %>
  <h3>
    <%= link_to category.name, category_path(category)%>    
  </h3>
  <p><%= link_to "Upravit", edit_category_path(category)%></p>
  <p><%= link_to "Vymazat", category_path(category), data: {turbo_method: :delete, turbo_confirm: "Urcite?"} %></p>
  <hr>
<% end %>