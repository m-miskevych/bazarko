<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Kategorie</h1>
  </div>


  <div class="row">
  <% @categories.each do |category| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
        </div>
      </div>
    </div>
  <% end %>
</div>

</div>